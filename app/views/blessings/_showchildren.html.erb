<br>
<br>
<hr>
<b>Unbatched Participants:</b>
<table border=1>
  <tr VALIGN=TOP>
    <th align=center>No</td>
    <th align=center>Name</td>
    <th align=center>Sex</td>
    <th align=center>Age</td>
    <th align=center>Donation</td>
  </tr>
  <% @blessing.participants.reverse.each do |participant|
  if participant.batch_id.nil?
%>  
  <tr VALIGN=TOP>
    <td align=center><%= participant.no %></td>
    <td align=center><%=participant.to_s%></td>
    <td align=center><%= participant.sex %></td>
    <td align=center><%= participant.age %></td>
    <td align=center><%= participant.donation %></td>
    <td align=center><%= link_to 'Edit', edit_participant_path(participant) %></td>
    <td align=center><%= link_to 'Delete', participant, confirm: 'Are you sure?', method: :delete %></td>
  </tr>

<%
  end
end
%>
</table>  
<%=link_to "New participant",new_participant_path+"?blessing_id="+@blessing.id.to_s%>

<br>
<br>
<hr>
  
<b>Batches:</b>
<table border=1>
<%
@blessing.batches.reverse.each do |batch|
%>  
  <tr VALIGN=TOP>
    <td align=left><%= link_to batch.to_s+"-Male", batch_path(batch)+"?gender=M" %></td>
    <td align=left><%= link_to 'Edit', edit_batch_path(batch) %></td>
    <td align=left><%= link_to 'Delete', batch, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
  <tr VALIGN=TOP>
    <td align=left><%= link_to batch.to_s+"-Female", batch_path(batch)+"?gender=F" %></td>
    <td align=left><%= link_to 'Edit', edit_batch_path(batch) %></td>
    <td align=left><%= link_to 'Delete', batch, confirm: 'Are you sure?', method: :delete %></td>
  </tr>

<%
end
%>
</table>  
<%=link_to "New Batch",blessings_addbatch_path+"?id="+@blessing.id.to_s, method: :post%>

  