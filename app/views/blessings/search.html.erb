<%=render 'search'%>
<hr>

<h1>Listing participants</h1>

<table>
  <tr>
    <th>Sex</th>
    <th>Name</th>
    <th>Age</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
    <th>Batch</th>
    <th>Blessing</th>
    <th>Occupation</th>
    <th>Introducer</th>
    <th>Guarantor</th>
    <th>Address</th>
    <th>Tel</th>
    <th>Missionary</th>
    <th>Remark</th>
    <th>Donation</th>
  </tr>

<% @participants.each do |participant| %>
  <tr>
    <td><%= participant.sex %></td>
    <td><%= participant.name %></td>
    <td><%= participant.age %></td>
    <td><%= link_to 'Show', participant %></td>
    <td><%= link_to 'Edit', edit_participant_path(participant) %></td>
    <td><%= link_to 'Delete', participant, confirm: 'Are you sure?', method: :delete %></td>
    <td><%= link_to participant.batch, participant.batch %></td>
    <td><%= link_to participant.blessing, participant.blessing %></td>
    <td><%= participant.occupation %></td>
    <td><%= participant.introducer %></td>
    <td><%= participant.guarantor %></td>
    <td><%= participant.address %></td>
    <td><%= participant.tel %></td>
    <td><%= participant.missionary %></td>
    <td><%= participant.remark %></td>
    <td><%= participant.donation %></td>
  </tr>
<% end %>
</table>

<br />
