    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>    
 <br>
      <%= f.label :name %>
      <%= f.text_field :name %>
 <br>
 <!--
      <%#= f.label :email %>
      <%#= f.text_field :email %>
 <br-->
 
      <%= f.label :password %>
      <%= f.password_field :password %>
 <br>
 
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
 <br>
    <%= f.label :is_admin %>
    <input <%if @user.is_admin%>checked="checked"<%end%> id="user_is_admin" name="user[is_admin]" type="checkbox" />
 <br>
    <%= f.label :is_encoder %>
    <input <%if @user.is_encoder%>checked="checked"<%end%> id="user_is_encoder" name="user[is_encoder]" type="checkbox" />
 <br>
    <%= f.label :is_batcher %>
    <input <%if @user.is_batcher%>checked="checked"<%end%> id="user_is_batcher" name="user[is_batcher]" type="checkbox" />
    
 <br>


      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>

<script>
//disable submit buttons for all forms after first click
//submit buttons all named "commit"

$('form').submit(function(){
 $('[name="commit"]').attr({
  disabled: 'disabled',
  value: 'Processing, Please Wait...'
 });
});

//enable buttons on refresh
$('[name="commit"]').removeAttr("disabled");   
</script>    